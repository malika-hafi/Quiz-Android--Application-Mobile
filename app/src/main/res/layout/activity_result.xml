<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Result">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:text="Quiz Android"
        android:textColor="#2E2B2B"
        android:textSize="50dp"
        android:textStyle="italic"
        />

    <ImageView
        android:id="@id/image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_android"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/test"
        text="Votre score"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_action_score_black"
        android:padding="20dp"
        android:text="Votre Score"
        android:textSize="20dp"

        >

    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mention"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_mention"
        android:padding="30dp"
        android:text="RÃ©ussi"
        android:textColor="#009688"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="244dp"
        android:layout_height="77dp"
        android:layout_gravity="center"
        android:onClick="ShowResult"
        android:text="voir la correction"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        app:cornerRadius="20dp"></com.google.android.material.button.MaterialButton>
</LinearLayout>